{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/AspNetCore.Vue.Vuetify.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "tslint all",
            "command": "node node_modules/tslint/bin/tslint -c .vscode/tslint.json --exclude 'node_modules/**/*.{j,t}s' **/*.ts",
            "type": "shell",
            "problemMatcher": {
               "owner": "tslint",
               "fileLocation": [
                   "relative",
                   "${workspaceRoot}"
               ],
               "severity":  "warning",
               "pattern": {
                   "regexp": "^(.*)\\[(\\d+), (\\d+)\\]:\\s+(.*)$",
                   "file": 1,
                   "line": 2,
                   "column": 3,
                   "message": 4
               }
            }
        }
    ]
}