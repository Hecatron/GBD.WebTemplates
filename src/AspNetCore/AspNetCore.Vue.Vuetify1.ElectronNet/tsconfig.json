{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "common/*": [
        "ClientApp/common/*"
      ]
    },
    "experimentalDecorators": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "ES2017",
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "strictFunctionTypes": false,
    "types": [ "webpack-env" ]
  },
  "exclude": [
    "bin",
    "obj",
    "node_modules",
    "wwwroot/dist",
    "webpack.config.*"
  ]
}
